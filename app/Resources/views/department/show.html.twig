{% extends 'base.html.twig' %}

{% block body %}
    <h1>Department</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Labeldepartment</th>
                <td>{{ department.labelDepartment }}</td>
            </tr>
            <tr>
                <th>Creatat</th>
                <td>{% if department.creatAt %}{{ department.creatAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Editat</th>
                <td>{% if department.editAt %}{{ department.editAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('department_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('department_edit', { 'id': department.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
